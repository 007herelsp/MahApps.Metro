<controls:MetroWindow x:Class="MetroDemo.ExampleWindows.IconPacksWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:metro="clr-namespace:MahApps.Metro;assembly=MahApps.Metro"
                      xmlns:virtualCollection="clr-namespace:VirtualCollection.VirtualCollection"
                      Title="IconPacks"
                      Width="800"
                      Height="600"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      ResizeMode="CanResizeWithGrip"
                      TextOptions.TextFormattingMode="Ideal"
                      TextOptions.TextRenderingMode="Auto"
                      mc:Ignorable="d">

    <Grid>

        <controls:MetroAnimatedTabControl>
            <TabItem Header="Material">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Margin="5"
                                   FontSize="{DynamicResource SubHeaderFontSize}"
                                   Text="Material Design Icons collection by Austin Andrews" />
                        <TextBlock Margin="10" FontSize="{DynamicResource NormalFontSize}">
                            For more information on Material Design Icons see the official website:
                            <Hyperlink Click="HyperlinkMaterialOnClick">materialdesignicons.com</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <ListBox x:Name="PackIconMaterialKindListBox"
                             Grid.Row="1"
                             Margin="0 8 0 0"
                             ItemsSource="{Binding MaterialKinds}"
                             Style="{DynamicResource VirtualisedMetroListBox}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <virtualCollection:VirtualizingWrapPanel IsItemsHost="True"
                                                                         ItemHeight="84"
                                                                         ItemWidth="84" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="metro:PackIconMaterialKind">
                                <DockPanel Width="64"
                                           Height="64"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Background="Transparent"
                                           ToolTip="{Binding }">
                                    <TextBlock HorizontalAlignment="Center"
                                               DockPanel.Dock="Bottom"
                                               Text="{Binding }"
                                               TextTrimming="CharacterEllipsis" />
                                    <metro:PackIconMaterial Width="32"
                                                            Height="32"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Kind="{Binding }" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Modern">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Margin="5"
                                   FontSize="{DynamicResource SubHeaderFontSize}"
                                   Text="Modern UI Icons collection by Austin Andrews" />
                        <TextBlock Margin="10" FontSize="{DynamicResource NormalFontSize}">
                            For more information on Modern UI Icons see the official website:
                            <Hyperlink Click="HyperlinkModernOnClick">modernuiicons.com</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <ListBox x:Name="PackIconModernKindListBox"
                             Grid.Row="1"
                             Margin="0 8 0 0"
                             ItemsSource="{Binding ModernKinds}"
                             Style="{DynamicResource VirtualisedMetroListBox}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <virtualCollection:VirtualizingWrapPanel IsItemsHost="True"
                                                                         ItemHeight="84"
                                                                         ItemWidth="84" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="metro:PackIconModernKind">
                                <DockPanel Width="64"
                                           Height="64"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Background="Transparent"
                                           ToolTip="{Binding }">
                                    <TextBlock HorizontalAlignment="Center"
                                               DockPanel.Dock="Bottom"
                                               Text="{Binding }"
                                               TextTrimming="CharacterEllipsis" />
                                    <metro:PackIconModern Width="48"
                                                          Height="48"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Kind="{Binding }" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </controls:MetroAnimatedTabControl>

    </Grid>

</controls:MetroWindow>
