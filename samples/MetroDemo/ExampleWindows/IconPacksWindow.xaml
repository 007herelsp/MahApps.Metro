<controls:MetroWindow x:Class="MetroDemo.ExampleWindows.IconPacksWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:metro="clr-namespace:MahApps.Metro;assembly=MahApps.Metro"
                      xmlns:virtualCollection="clr-namespace:VirtualCollection.VirtualCollection"
                      Title="IconPacks"
                      Width="800"
                      Height="600"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      ResizeMode="CanResizeWithGrip"
                      TextOptions.TextFormattingMode="Ideal"
                      TextOptions.TextRenderingMode="Auto"
                      mc:Ignorable="d">

    <Grid>

        <controls:MetroAnimatedTabControl>
            <TabItem Header="Material">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Margin="5"
                                   FontSize="{DynamicResource SubHeaderFontSize}"
                                   Text="Material Design Icons collection" />
                        <TextBlock Margin="10" FontSize="{DynamicResource NormalFontSize}">
                            For more information see the official website:
                            <Hyperlink Click="HyperlinkMaterialOnClick">materialdesignicons.com</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <ListBox x:Name="PackIconMaterialKindListBox"
                             Grid.Row="1"
                             Margin="0 8 0 0"
                             ItemsSource="{Binding MaterialKinds}"
                             Style="{DynamicResource VirtualisedMetroListBox}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <virtualCollection:VirtualizingWrapPanel IsItemsHost="True"
                                                                         ItemHeight="84"
                                                                         ItemWidth="84" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="metro:PackIconMaterialKind">
                                <DockPanel Width="64"
                                           Height="64"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Background="Transparent"
                                           ToolTip="{Binding Mode=OneWay}">
                                    <TextBlock HorizontalAlignment="Center"
                                               DockPanel.Dock="Bottom"
                                               Text="{Binding Mode=OneWay}"
                                               TextTrimming="CharacterEllipsis" />
                                    <metro:PackIconMaterial Width="32"
                                                            Height="32"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Kind="{Binding Mode=OneWay}" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="2" Background="{DynamicResource AccentColorBrush4}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 MinWidth="500"
                                 Margin="5"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 FontFamily="Courier New"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 GotFocus="TextBoxOnGotFocus"
                                 Text="{Binding ElementName=PackIconMaterialKindListBox, Path=SelectedItem, Mode=OneWay, StringFormat='&lt;metro:PackIconMaterial Kind=&quot;{0}&quot; \/&gt;'}" />
                        <StackPanel Grid.Column="1"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <DockPanel Margin="5" Background="Transparent">
                                <TextBlock HorizontalAlignment="Center"
                                           DockPanel.Dock="Bottom"
                                           Text="16x16" />
                                <metro:PackIconMaterial Width="16"
                                                        Height="16"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Kind="{Binding ElementName=PackIconMaterialKindListBox, Path=SelectedItem, Mode=OneWay}" />
                            </DockPanel>
                            <DockPanel Margin="5" Background="Transparent">
                                <TextBlock HorizontalAlignment="Center"
                                           DockPanel.Dock="Bottom"
                                           Text="24x24" />
                                <metro:PackIconMaterial Width="24"
                                                        Height="24"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Kind="{Binding ElementName=PackIconMaterialKindListBox, Path=SelectedItem, Mode=OneWay}" />
                            </DockPanel>
                            <DockPanel Margin="5" Background="Transparent">
                                <TextBlock HorizontalAlignment="Center"
                                           DockPanel.Dock="Bottom"
                                           Text="48x48" />
                                <metro:PackIconMaterial Width="48"
                                                        Height="48"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Kind="{Binding ElementName=PackIconMaterialKindListBox, Path=SelectedItem, Mode=OneWay}" />
                            </DockPanel>
                            <DockPanel Margin="5" Background="Transparent">
                                <TextBlock HorizontalAlignment="Center"
                                           DockPanel.Dock="Bottom"
                                           Text="76x76" />
                                <metro:PackIconMaterial Width="76"
                                                        Height="76"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Kind="{Binding ElementName=PackIconMaterialKindListBox, Path=SelectedItem, Mode=OneWay}" />
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Modern">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Margin="5"
                                   FontSize="{DynamicResource SubHeaderFontSize}"
                                   Text="Modern UI Icons collection" />
                        <TextBlock Margin="10" FontSize="{DynamicResource NormalFontSize}">
                            For more information see the official website:
                            <Hyperlink Click="HyperlinkModernOnClick">modernuiicons.com</Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <ListBox x:Name="PackIconModernKindListBox"
                             Grid.Row="1"
                             Margin="0 8 0 0"
                             ItemsSource="{Binding ModernKinds}"
                             Style="{DynamicResource VirtualisedMetroListBox}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <virtualCollection:VirtualizingWrapPanel IsItemsHost="True"
                                                                         ItemHeight="84"
                                                                         ItemWidth="84" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="metro:PackIconModernKind">
                                <DockPanel Width="64"
                                           Height="64"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Background="Transparent"
                                           ToolTip="{Binding }">
                                    <TextBlock HorizontalAlignment="Center"
                                               DockPanel.Dock="Bottom"
                                               Text="{Binding }"
                                               TextTrimming="CharacterEllipsis" />
                                    <metro:PackIconModern Width="48"
                                                          Height="48"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Kind="{Binding }" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </controls:MetroAnimatedTabControl>

    </Grid>

</controls:MetroWindow>
