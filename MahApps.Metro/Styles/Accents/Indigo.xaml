<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="HighlightColor">#FF6A00FF</Color>
    
    <Color x:Key="AccentColor">#CC6A00FF</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#996A00FF</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#666A00FF</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#336A00FF</Color>

    <!-- re-set brushes too -->
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentColorBrush2" Color="{StaticResource AccentColor2}"/>
    <SolidColorBrush x:Key="AccentColorBrush3" Color="{StaticResource AccentColor3}"/>
    <SolidColorBrush x:Key="AccentColorBrush4" Color="{StaticResource AccentColor4}"/>

    <SolidColorBrush x:Key="AccentSelectedColorBrush" Color="White" />
</ResourceDictionary>