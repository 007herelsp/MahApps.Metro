        <!--        <ResourceDictionary Source="ToolTip.xaml" />-->
        <!--        <ResourceDictionary Source="TreeView.xaml" />-->
    </ResourceDictionary.MergedDictionaries>

    <!--  Default Styles  -->
    <Style x:Key="{x:Type ToggleButton}"
           BasedOn="{StaticResource BaseButtonStyle}"
           TargetType="{x:Type ToggleButton}" />
    <Style x:Key="{x:Type RepeatButton}"
           BasedOn="{StaticResource RepeatButtonStyle}"
           TargetType="{x:Type RepeatButton}" />
    <Style x:Key="{x:Type Button}"
           BasedOn="{StaticResource BaseButtonStyle}"
           TargetType="{x:Type Button}" />
    <Style x:Key="{x:Type CheckBox}"
           BasedOn="{StaticResource CheckBoxStyle}"
           TargetType="{x:Type CheckBox}" />
    <Style x:Key="{x:Type RadioButton}"
           BasedOn="{StaticResource RadioButtonStyle}"
           TargetType="{x:Type RadioButton}" />
    <Style x:Key="{x:Type ScrollViewer}"
           BasedOn="{StaticResource ScrollViewerStyle}"
           TargetType="{x:Type ScrollViewer}" />
    <Style x:Key="{x:Type ScrollBar}"
           BasedOn="{StaticResource ScrollBarStyle}"
           TargetType="{x:Type ScrollBar}" />

    <!--  font settings  -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI, Lucida Sans Unicode, Verdana</FontFamily>
    <sys:Double x:Key="DefaultFontSize">13</sys:Double>

    <!--  System Button  -->
    <sys:Double x:Key="SystemButtonHeight">24</sys:Double>
    <sys:Double x:Key="SystemButtonWidth">32</sys:Double>

</ResourceDictionary>